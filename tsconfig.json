{
  "compilerOptions": {
    "types": ["vitest/importMeta", "vitest/globals"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["functions/**/*.ts", "schema/**/*.json", "decoders/**/*.ts"],
}
